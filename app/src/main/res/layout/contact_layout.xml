<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/contact_layout_background"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/commonMargin"
        android:gravity="start"
        android:textAlignment="viewStart"
        android:textSize="25sp"
        android:layout_marginLeft="@dimen/commonMargin"
        android:layout_marginStart="@dimen/commonMargin"
        app:layout_constraintBottom_toTopOf="@id/number"
        app:layout_constraintRight_toLeftOf="@id/check"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <TextView
        android:id="@+id/number"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/commonMargin"
        android:textAlignment="viewStart"
        android:gravity="start"
        android:textSize="12sp"
        android:layout_marginLeft="@dimen/commonMargin"
        android:layout_marginStart="@dimen/commonMargin"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@id/check"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <CheckBox
        android:id="@+id/check"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />


</android.support.constraint.ConstraintLayout>