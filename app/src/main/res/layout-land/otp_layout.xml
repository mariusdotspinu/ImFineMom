<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/title"
        android:textAlignment="center"
        android:textColor="@color/colorTextTitle"
        android:textSize="50sp"
        app:fontFamily="@font/moonllime"
        app:layout_constraintBottom_toTopOf="@id/second"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:rotation="-10"
        android:text="@string/subtitle"
        android:textAlignment="center"
        android:textColor="@color/colorTextSubtitle"
        android:textSize="70sp"
        app:fontFamily="@font/moonllime"
        app:layout_constraintTop_toBottomOf="@+id/first" />

    <LinearLayout
        android:id="@+id/verify_main_layout"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toTopOf="@id/second"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/moonllime"
            android:textSize="40sp"
            android:layout_margin="10dp"
            android:text="Please, enter your phone number:"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@id/phone_layout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />
        <LinearLayout
            android:gravity="center"
            android:id="@+id/phone_layout"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/prefix_spinner"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:scrollbarSize="20sp"
                app:layout_constraintBottom_toTopOf="@id/otp_verify"
                app:layout_constraintLeft_toLeftOf="@id/edit_phoneNumber"
                app:layout_constraintRight_toRightOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edit_phoneNumber"
                android:layout_width="250dp"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/secondaryText"
                android:inputType="number"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/otp_verify"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/prefix_spinner" />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/otp_verify"
            android:layout_weight="2"
            android:text="Verify"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:textColor="@color/verify"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            style="@style/Otp.Button"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_phoneNumber" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/code_authentication_layout"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/second"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_sms_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/moonllime"
            android:textSize="40sp"
            android:layout_margin="10dp"
            android:text="Please, enter code received:"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_sms_code"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/secondaryText"
            android:inputType="number"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/otp_complete"
            android:layout_weight="1"
            android:text="Complete"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:textColor="@color/verify"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_gravity="center|bottom"
            style="@style/Otp.Button"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/otp_resend"
            android:layout_weight="1"
            android:text="Resend Code"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:textColor="@color/verify"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_gravity="center|bottom"
            style="@style/Otp.Button.Resend"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/otp_complete" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>